<!DOCTYPE html>
<html lang="en">
<% include ../../partials/head.ejs %>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">



<body>
  <% include ../../partials/loader.ejs %>

  <div class="admin">
    <% include ../../partials/sidebar.ejs %>

    <!-- Admin Main Area CSS -->

    <div class="admin_main">
      <div id="logo" style="display: hidden;"></div>
      <div id="banner" style="display: hidden;"></div>
      <div id="video" style="display: hidden;"></div>


      <div class="admin_title_area">
        <div class="container-fluid">
          <div class="row">
            <div style="flex: 1;">
              <h2 class="font-lato text-3.3xl">Edit <i><%= campaign.title %></i></h2>
            </div>
            <div>
              <a href='/preview/landing-page?where=dashboard&cid=<%= campaign.id %>' target="_blank">
                <button type="button" class="btn grey_btn">VIEW LANDING PAGE</button>
              </a>
              <a href='/preview/campaign-email?where=dashboard&cid=<%= campaign.id %>' target="_blank">
                <button type="button" class="btn dark_btn">VIEW EMAIL</button>
              </a>
              <% if (is_admin) { %>
                <button type="button" class="btn common_btn" id="add-products-btn">ADD PRODUCTS</button>
              <% } %>
            </div>
          </div>
        </div>
      </div>

      <div class="admin_content_area">
        <div class="container-fluid">
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" id="general-tab" data-toggle="tab" href="#general" role="tab" aria-controls="home" aria-selected="false">General</a>
            </li>
            <% if (is_admin && !campaign['allow_multiple_redemptions']) { %>
            <li class="nav-item">
              <a class="nav-link" id="contacts-tab" data-toggle="tab" href="#contacts" role="tab" aria-controls="contacts" aria-selected="true">Contacts</a>
            </li>
            <% } %>
          </ul>
          <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">
              <% include edit-campaign-home.ejs %>
            </div>
            <div class="tab-pane fade" id="contacts" role="tabpanel" aria-labelledby="contacts-tab">
              <% include edit-contacts.ejs %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% include ../../partials/footer.ejs %>
  </div>

  <% include ../../partials/modals.ejs %>
  <% include ../../partials/storage.ejs %>
  <% include ../../partials/foot.ejs %>
  <script src="/dist/runtime.js?cd=v1"></script>
  <script src="/dist/vendors.js?cd=v1"></script>
  <script type="text/javascript">window.__PAGE = 'EDIT_CAMPAIGN';</script>
  <script src="/dist/index.js?cd=v1"></script>
</body>
<% include ../../partials/process-contacts_action.ejs %>
<% include client-edit-campaign_action.ejs %>
<% include edit-contacts_action.ejs %>


</html>