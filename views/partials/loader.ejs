<div id="loading-overlay" class="page-overlay">
    <div class="overlay">
        <img src='/resources/images/loader/loader.png' alt='Loader image' class="loader">
        <img src="/resources/images/loader/logo_mobile.svg" alt="GiftsForGood logo" class="logo" />
    </div>
</div>

<script type='text/javascript'>
    const loadingIndicator = {
      isVisible: false,
    };

    const handler = {
      set(target, prop, value) {
        if (prop === 'isVisible') {
          if (value) {
            document.getElementById('loading-overlay').style.display = 'block';
          } else {
            document.getElementById('loading-overlay').style.display = 'none';
          }
        }
        target[prop] = value;
      },
    };

    const proxyLoader = new Proxy(loadingIndicator, handler);

    var showLoader = (isVisible) => {
      proxyLoader.isVisible = isVisible;
    };
</script>

<style>
    .page-overlay {
        top: 0;
        left: 0;
        position: fixed;
        height: 100%;
        width: 100%;
        z-index: 1001;
        display: none;
    }

    #loading-overlay {
        background:  rgba(255, 255, 255, 0.5);
    }

    .page-overlay .overlay {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    #loading-overlay .loader {
        animation: spin 1s infinite linear;
    }

    #loading-overlay .logo {
        width: 24px;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    @keyframes spin {
        100% {
            transform: rotate(360deg);
        }
    }
</style>